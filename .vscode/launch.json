{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": [
                "run"
            ],
            "env": {
                "FLASK_ENV": "development",
                "FLASK_APP": "${workspaceFolder}/app.py"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
